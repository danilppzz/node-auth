<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index</title>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f3f4f6;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin-top: 50px;
      }

      .card {
        width: 100%;
        max-width: 400px;
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .form-control {
        border-radius: 10px;
      }

      .btn-primary {
        width: 100%;
        background-color: #4f46e5;
        border-color: #4f46e5;
        border-radius: 10px;
      }

      .btn-delete {
        width: 100%;
        background-color: #f33939;
        border-color: #f33939;
        border-radius: 10px;
      }

      .btn-primary:hover {
        background-color: #4038cc;
        border-color: #4038cc;
      }

      .alert {
        border-radius: 10px;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="card mb-4">
        <div class="card-body">
          <% if (typeof username !== 'undefined') { %>
          <div class="mb-4">
            <h2 class="text-center text-3xl font-bold mb-4">Welcome <%= username %></h2>
            <form action="/logout" method="POST" class="mt-2">
              <button
                type="submit"
                class="btn btn-delete w-full py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500"
              >
                Close Session
              </button>
            </form>
          </div>
          <% } else { %>
          <h2 class="text-2xl font-bold mb-4">Login</h2>
          <form id="loginForm">
            <div class="mb-4">
              <input
                type="text"
                id="username"
                name="username"
                class="form-control py-3 px-4 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                placeholder="Username"
                required
              />
            </div>
            <div class="mb-4">
              <input
                type="password"
                id="password"
                name="password"
                class="form-control py-3 px-4 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                placeholder="Password"
                required
              />
            </div>
            <button
              type="submit"
              class="btn btn-primary w-full py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Login
            </button>
          </form>
          <div id="loginMessage" class="mt-3"></div>

          <hr class="my-4" />

          <h2 class="text-2xl font-bold mb-4">Register</h2>
          <form id="registerForm">
            <div class="mb-4">
              <input
                type="text"
                id="reg_username"
                name="username"
                class="form-control py-3 px-4 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                placeholder="Username"
                required
              />
            </div>
            <div class="mb-4">
              <input
                type="password"
                id="reg_password"
                name="password"
                class="form-control py-3 px-4 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                placeholder="Password"
                required
              />
            </div>
            <div class="mb-4">
              <input
                type="password"
                id="confirmPassword"
                name="confirmPassword"
                class="form-control py-3 px-4 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                placeholder="Confirm Password"
                required
              />
            </div>
            <button
              type="submit"
              class="btn btn-primary w-full py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Register
            </button>
          </form>
          <div id="registerMessage" class="mt-3"></div>
          <% } %>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
      document.getElementById("loginForm").addEventListener("submit", function (event) {
        event.preventDefault();
        const username = document.getElementById("username").value;
        const password = document.getElementById("password").value;
        axios
          .post("/login", { username, password })
          .then(function (response) {
            window.location.href = "/";
          })
          .catch(function (error) {
            document.getElementById("loginMessage").innerHTML =
              '<div class="alert alert-danger" role="alert">Error: ' +
              error.response.data +
              "</div>";
          });
      });

      document.getElementById("registerForm").addEventListener("submit", function (event) {
        event.preventDefault();
        const username = document.getElementById("reg_username").value;
        const password = document.getElementById("reg_password").value;
        const confirmPassword = document.getElementById("confirmPassword").value;
        if (password !== confirmPassword) {
          document.getElementById("registerMessage").innerHTML =
            '<div class="alert alert-danger" role="alert">Las contrase√±as no coinciden.</div>';
          return;
        }
        axios
          .post("/register", { username, password })
          .then(function (response) {
            window.location.href = "/";
          })
          .catch(function (error) {
            document.getElementById("registerMessage").innerHTML =
              '<div class="alert alert-danger" role="alert">Error: ' +
              error.response.data +
              "</div>";
          });
      });
    </script>
  </body>
</html>
